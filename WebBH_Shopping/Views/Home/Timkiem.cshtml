@using X.PagedList
@using X.PagedList.Mvc.Core;

@model IPagedList<ProductModel>
@{
	ViewData["Title"] = "Home Page";
}


<div class="col-sm-3">
	@Html.Partial("_SidebarPartial")

</div>
<style>
	.product-image-wrapper {
		height: 450px;
	}
</style>

<div class="col-sm-9 padding-right">
	<div class="features_items">
		<!--features_items-->
		<h2 class="title text-center">Features Items</h2>

		@foreach (var item in Model)
		{

			<div class="col-sm-4">
				<div class="product-image-wrapper">

					<div class="single-products">

						<div class="productinfo text-center">

							<a asp-action="Details" asp-controller="Product" asp-route-Id="@item.Id">
								<img src="~/media/products/@item.Image" alt="@item.Name" width="100px" height="250px" />
								<h2> @item.Price VND</h2>
								<p>@item.Name</p>
								<p>Danh mục: @item.Category.Name</p>
								<p>Thương hiệu: @item.Brand.Name</p>
							</a>
							@if (User.Identity?.IsAuthenticated ?? false)
							{
								<a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="Cart" asp-route-Id="@item.Id"><i class="fa fa-shopping-cart"></i>Add to cart</a>
							}
							else
							{
								<a class="btn btn-default add-to-cart" asp-action="Login" asp-controller="Account"><i class="fa fa-shopping-cart"></i>Add to cart</a>
							}

						</div>

					</div>


				</div>
			</div>
		}
		@Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
					PagedListRenderOptions.ClassicPlusFirstAndLast)



	</div><!--features_items-->
	<!--/category-tab-->



</div>
